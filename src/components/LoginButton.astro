<div>
  <div data-netlify-identity-button>Login with Netlify Identity</div>
</div>

<script>
if (window.netlifyIdentity) {
  window.netlifyIdentity.on("init", user => {
    if (!user) {
      window.netlifyIdentity.on("login", () => {
        document.location.href = "/profile/";
      });
    }
  });
}
</script>